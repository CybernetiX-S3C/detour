			state: "default" 0.0;
			min: 10 12;
			max: 10 12;
			fixed: 1 1;
			visible: 0;
			rel1 {
				relative: 1.0 0.0;
				offset: -1 0;
			}
			rel2 {
				relative: 1.0 1.0;
				offset: -1 -1;
			}
			image {
				normal: "menu_arrow.png";
			}
		}
		description {
			state: "visible" 0.0;
			inherit: "default" 0.0;
			visible: 1;
			rel1 {
				relative: 1.0 0.5;
				offset: -13 -6;
			}
			rel2 {
				relative: 1.0 0.5;
				offset: -3 5;
			}
		}
		description {
			state: "spacer" 0.0;
			inherit: "default" 0.0;
			visible: 0;
			rel1 {
				relative: 1.0 0.5;
				offset: -13 -6;
			}
			rel2 {
				relative: 1.0 0.5;
				offset: -3 5;
			}
		}
	}
	
	part {
		name: "label";
		type: TEXT;
		effect: SHADOW;
		mouse_events:	0;
		description {
			state: "default" 0.0;
			color: 7 7 7 255;
		color3: 170 168 169 255;
			rel1 {
				relative: 1.0 0.0;
				offset: 13 6;
				to_x: "left_widget_swallow";
			}
			rel2 {
				relative: 0.0 1.0;
				offset: -14 -7;
				to_x: "arrow";
			}
			text {
				text: "label";
				font: "Vera";
				size:  10;
				min: 1 1;
				align: 0.0 0.5;
			}
		}
	}

part {
         name: "button_overlay";
         mouse_events: 0;
         description {
            state: "default" 0.0;
            visible: 0;
            color: 255 255 255 180;
            rel1 {
               relative: 0.0 0.0;
               offset: 1 1;
            }
            rel2 {
               relative: 1.0 1.0;
               offset: -2 -1;
            }
            image {
               normal: "toolbar_button_overlay.png";
               border: 4 4 11 4;
            }
            fill {
               smooth: 0;
            }
         }
         description {
			state: "active" 0.0;
			inherit: "default" 0.0;
			visible: 1;
			color: 255 255 255 180;
		}	
     }
	
	
	}
	
	programs {
 	program {
		name: "go_active_pre";
		signal: "select";
		source: "";
		action: STATE_SET "default" 0.0;
		target: "bg";
		after: "go_active";
	}
