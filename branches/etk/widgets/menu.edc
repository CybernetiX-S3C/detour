			state: "default" 0.0;
			//min: 10 26;
			image {
				normal: "dialog_bg.png";
				border: 2 2 2 2;
			}
			fill.smooth: 0;
		}
	}		

	part {
		name: "menu_bg_border";
		mouse_events: 0;
