
# ifdef ITEM_SEL
#  undef ITEM_SEL
# endif

#define ITEM_SEL(NAME,SIGNAL,STATE_NAME,INDEX,TRANSITION,TRANS_INDEX,TARGET) \
program { \
	name: NAME; \
	signal: SIGNAL; \
	source: ""; \
	action: STATE_SET STATE_NAME INDEX; \
	transition: TRANSITION TRANS_INDEX; \
	target: TARGET; \
}


group {
	name: "menu";
	
	data {
		item: "inset" "1 1 4 3";
	}
	
