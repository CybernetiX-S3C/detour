		name: "check_button_enter";
		signal: "enter";
		source: "";
		action: STATE_SET "over" 0.0;
		target: "bg";
	}

	program {
		name: "check_button_leave";
		signal: "leave";
		source: "";
		action: STATE_SET "default" 0.0;
		target: "bg";
	}*/
    }
}
